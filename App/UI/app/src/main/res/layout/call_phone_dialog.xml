<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/morePhoneInfo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Choose from your contact or insert a number"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ButtonContactDialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ButtonContactDialog"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="430dp"
        android:layout_marginEnd="1dp"
        android:background="@android:drawable/ic_input_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/phoneTextDialog"
        app:layout_constraintTop_toBottomOf="@+id/morePhoneInfo" />

    <EditText
        android:id="@+id/phoneTextDialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        app:layout_constraintEnd_toStartOf="@+id/ButtonContactDialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/morePhoneInfo" />
</android.support.constraint.ConstraintLayout>